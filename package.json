{
  "name": "@aurodesignsystem/auro-formvalidation",
  "version": "1.0.3",
  "description": "This repository holds shared scripts, utilities, and workflows utilized across repositories along the Auro Design System.",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlaskaAirlines/auro-formvalidation.git"
  },
  "type": "module",
  "main": "index.js",
  "license": "Apache-2.0",
  "engines": {
    "node": "^18 || ^20"
  },
  "dependencies": {
    "@aurodesignsystem/auro-library": "^2.6.0"
  },
  "devDependencies": {
    "@aurodesignsystem/eslint-config": "^1.3.2",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@web/test-runner": "^0.19.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.11.1",
    "eslint-plugin-jsdoc": "^50.3.0",
    "husky": "^8.0.3",
    "markdown-magic": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^24.1.2",
    "typescript": "^5.4.5",
    "web-component-analyzer": "^2.0.0"
  },
  "release": {
    "branches": [
      {
        "name": "main"
      },
      {
        "name": "beta",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "./CHANGELOG.md",
          "changelogTitle": "# Semantic Release Automated Changelog"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "./package.json",
            "./CHANGELOG.md",
            "./README.md",
            "./docs/api.md"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm-run-all dist:js build:api build:docs postinstall types test",
    "build:docs": "node scripts/generateDocs.cjs",
    "build:api": "wca analyze 'src/validation.js' --outFiles docs/api.md",
    "dist:js": "copyfiles -u 1 -V './src/**/*.js' ./dist",
    "esLint": "./node_modules/.bin/eslint src/**/*.js --ignore-pattern 'src/**/*Version.js'",
    "linters": "npm-run-all esLint",
    "preCommit": "node scripts/pre-commit.mjs",
    "postinstall": "node packageScripts/postinstall.mjs",
    "prepare": "husky install",
    "test": "wtr --coverage",
    "types": "tsc"
  },
  "bugs": {
    "url": "https://github.com/AlaskaAirlines/auro-formvalidation/issues"
  }
}
